<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
  <br />
  <%= link_to "delete", tag_path(@tag), method: :delete, data: {confirm: "Really delete the tag?"} %></br>
  <%= link_to "<< Back to Tag List", tags_path %></br>
</ul>