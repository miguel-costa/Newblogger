<h1>All Tags</h1>

<ul id="tags">
        <% @tags.each do |tag| %>
            <li>
                <%= link_to tag.name, tag_path(tag),
                class: 'tag_name', name: "tag_#{tag.id}" %>
            </li>
        <% end %>
        <br/>
        <%= link_to "Create a New Tag", new_tag_path, class: 'new_article' %>
        <%= link_to "<< Back to Articles List", articles_path %></br>
</ul>